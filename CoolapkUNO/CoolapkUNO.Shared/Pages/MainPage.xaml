<Page
    x:Class="CoolapkUNO.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CoolapkUNO.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoolapkUNO.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <controls:TitleBar
        Title="Coolapk"
        VerticalAlignment="Top"
        IsBackButtonVisible="True"
        IsBackEnabled="True">
        <controls:TitleBar.IconSource>
            <muxc:ImageIconSource ImageSource="ms-appx:///Assets/StoreLogo.scale-400.png" />
        </controls:TitleBar.IconSource>
        <Grid>
            <AutoSuggestBox
                Width="260"
                Height="32"
                HorizontalAlignment="Center"
                PlaceholderText="Search"
                QueryIcon="Find" />
            <muxc:PersonPicture Height="32" HorizontalAlignment="Right" />
        </Grid>
    </controls:TitleBar>
</Page>
