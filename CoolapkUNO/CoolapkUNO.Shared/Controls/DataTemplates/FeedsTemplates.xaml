<ResourceDictionary
    x:Class="CoolapkUNO.Controls.DataTemplates.FeedsTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:feeds="using:CoolapkUNO.Models.Feeds"
    xmlns:local="using:CoolapkUNO.Controls.DataTemplates"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <DataTemplate x:Key="Empty" />

    <DataTemplate x:Key="FeedDefaultTemplate" x:DataType="feeds:FeedModel">
        <UserControl
            x:Name="Root"
            Background="{StaticResource SystemControlTransparentBrush}"
            Tag="{x:Bind Url}">
            <Grid
                Padding="8,4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlTransparentBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="4"
                    HorizontalAlignment="Left"
                    Text="{x:Bind Message}"
                    TextWrapping="Wrap" />
            </Grid>
        </UserControl>
    </DataTemplate>
</ResourceDictionary>
